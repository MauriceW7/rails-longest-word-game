<h1>
  New Game!
</h1>
<div class="letters">
  <% @letters.each do |letter| %>
      <p><%= letter%></p>
  <% end %>

</div>
<br>
<br>
<br>
<h3>What's the longest word you can type?</h3>
<form action="/score" method="post">
  <input type="text" name="word">
  <input type="submit" value="Enter word!">
  <input id="token" name="letters" type="hidden" value="<%= @letters %>" />
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
